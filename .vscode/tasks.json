{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "process",
            "command": "hugo"
        },
        {
            "label": "serve",
            "type": "process",
            "command": "hugo",
            "args": [
                "serve"
            ]
        },
        {
            "label": "browse",
            "command": "Explore",
            "type": "process",
            "windows": {
                "command": "explorer"
            },
            "osx": {
                "command": "open"
            },
            "args": [
                "http://localhost:1313/cv-site"
            ]
        },
        {
            "label": "launch",
            "dependsOn": [
                "build",
                "serve",
                "browse"
            ],
            "problemMatcher": []
        }
    ]
}
